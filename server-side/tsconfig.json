{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "rootDir": "..",
    "outDir": "build",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@pepperi-addons/ngx-remote-loader": [
        "../../../ngx-remote-loader/dist/remote-loader"
      ],
      "@pepperi-addons/ngx-remote-loader/*": [
        "../../../ngx-remote-loader/dist/remote-loader/*"
      ]

    }
    
  },
  "exclude": [
    "./build/**",
    "./dest/**"
  ]
}
